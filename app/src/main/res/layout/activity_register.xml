<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"

    tools:context=".activities.Register">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="-35dp"
        android:background="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ticket_shape"
        android:hint="Email Address"
        android:padding="5dp"
        android:textAlignment="textStart"
        android:textColor="@color/goldII"
        android:textColorHint="@color/lightGray"
        android:textSize="16sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/text_LastName"
        tools:layout_editor_absoluteX="60dp" />

    <EditText
        android:id="@+id/text_FisrtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/ticket_shape"
        android:hint="First Name"
        android:padding="5dp"
        android:textAlignment="textStart"
        android:textColor="@color/goldII"
        android:textColorHint="@color/lightGray"
        android:textSize="16sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/text_LastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ticket_shape"
        android:hint="Last Name"
        android:padding="5dp"
        android:textAlignment="textStart"
        android:textColor="@color/goldII"
        android:textColorHint="@color/lightGray"
        android:textSize="16sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/text_FisrtName"
        tools:layout_editor_absoluteX="60dp" />

    <EditText
        android:id="@+id/text_Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ticket_shape"
        android:hint="Phone number "
        android:padding="5dp"
        android:textAlignment="textStart"
        android:textColor="@color/goldII"
        android:textColorHint="@color/lightGray"
        android:textSize="16sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@+id/text_Password"
        tools:layout_editor_absoluteX="60dp" />

    <EditText
        android:id="@+id/text_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ticket_shape"
        android:hint="Password"
        android:padding="5dp"
        android:textAlignment="textStart"
        android:textColor="@color/goldII"
        android:textColorHint="@color/lightGray"
        android:textSize="16sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/text_Email"
        tools:layout_editor_absoluteX="60dp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_shape_register"
        android:text="register"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/text_Phone"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>